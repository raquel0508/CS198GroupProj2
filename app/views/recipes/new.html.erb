<div class="create-recipe form-horizontal">
	<h1 style="margin: 0px 0px 30px 0px; text-align: center"> Write a Recipe! </h1>
	<%= simple_form_for @recipe do |f| %>
		<div class="form-group name">
			<%= f.label :name, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
		  		<%= f.text_field :name, autofocus: true , class: "form-control" %>
		  	</div>
		</div>
		<div class="form-group">
		  	<%= f.label :description, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
		  		<%= f.text_field :description, autofocus: true , class: "form-control" %>
		  	</div>
		</div>
		<div class="form-group">
			<%= f.label :calories, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
				<%= f.number_field :calories, autofocus: true , class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :difficulty, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
				<%= f.number_field :level_of_difficulty, autofocus: true , class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :price, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
				<%= f.text_field :price, autofocus: true , class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
		  	<%= f.label :steps, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
		  		<%= f.text_field :steps, autofocus: true , class: "form-control" %>
		  	</div>
		</div>
		<div class="form-group">
			<%= f.label :vegan, class: "col-sm-2 control-label" %>
			<div class="col-sm-8">
				 <%= f.check_box :vegan_vegetarian, :as => :boolean, input_html: {checked: false}, :label => false, :inline_label => true, class: 'check-box' %>
			</div>
		</div>
		<div class="form-group">
		  	<%= f.label :allergens, class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
		  		<%= f.check_box :contains_allergens, :as => :boolean, input_html: {checked: false}, :label => false, :inline_label => true, class: 'check-box' %>
		  	</div>
		</div>
	<div class="col-sm-4">
	</div>
	<div class="col-sm-4">
		<%= f.button :submit, :class => 'create-recipe-button'%>
	</div>
	<div class="col-sm-4">
	</div>
	<% end %>
</div>
<% if current_user %>
	<h1 id="title">Welcome <%= current_user.username %>!</h1>
<% else %>
	<div class="content">
		<script>
			$(".navbar").removeClass("navbar-default");
			$(".navbar").addClass('navbar-fixed-top');
		</script>
		<div class="welcome">
			<div class="message">
				Welcome to Recipe.io!
			</div>
			<div class="slogan">
				At Recipe.io we aim to make recipe searching easier.
			</div>
		</div>
		<div class="start-button" href="/users/sign_up">
			Get Started
		</div>
		<script> 
		$(".start-button").on("click", function(){
		    window.location = $(this).attr("href");
		});
		</script>
	</div>
<% end %>
